                  "new skill",
                  "build skill",
                  "package skill",
                  "skill template",
                  "skill structure",
                  "SKILL.md",
                  "skill validation",
                  "publish skill",
                  "skill development"
              ],
              "intentPatterns": [
                  "(create|make|build|develop).*?(new|a|custom).*?skill",
                  "(package|publish|distribute).*?skill",
                  "(validate|check|verify).*?skill.*?(structure|format)",
                  "how.*?(create|make|build).*?skill",
                  "skill.*?(template|boilerplate|scaffold)"
              ]
          },
          "fileTriggers": {
              "pathPatterns": [
                  ".claude/skills/**/SKILL.md",
                  "**/skills/**/SKILL.md"
