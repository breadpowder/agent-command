                  "build mcp",
                  "fastmcp",
                  "mcp sdk",
                  "mcp integration",
                  "mcp resource",
                  "mcp prompt"
              ],
              "intentPatterns": [
                  "(create|build|make|develop).*?mcp.*?(server|tool)",
                  "(implement|add).*?mcp.*?(integration|connection)",
                  "mcp.*?(best practices|patterns|guide)",
                  "(python|node|typescript).*?mcp.*?server",
                  "how.*?(create|build).*?mcp"
              ]
          },
          "fileTriggers": {
              "pathPatterns": [
                  "**/mcp/**/*.py",
                  "**/mcp/**/*.ts",
                  "**/mcp-server/**/*",
                  "**/*mcp*.py",
                  "**/*mcp*.ts"
              ]
          }
      },
      "xlsx": {
