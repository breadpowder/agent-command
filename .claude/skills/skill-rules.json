{
  "version": "1.0",
  "description": "Skill activation triggers for Claude Code. Controls when skills automatically suggest or block actions.",
  "skills": {
      "pptx": {
          "type": "domain",
          "enforcement": "suggest",
          "priority": "high",
          "description": "Create, edit, and analyze PowerPoint presentations (.pptx files)",
          "promptTriggers": {
              "keywords": [
                  "powerpoint",
                  "pptx",
                  "presentation",
                  "slides",
                  "slide deck",
                  "create presentation",
                  "edit presentation",
                  "add slide",
                  "presentation template",
                  "speaker notes",
                  "slide layout"
              ],
              "intentPatterns": [
                  "(create|make|build|generate).*?(presentation|slides|pptx|powerpoint)",
                  "(edit|modify|update).*?(presentation|slides|pptx|powerpoint)",
                  "(add|insert).*?(slide|image|chart).*?(presentation|pptx)",
                  "(convert|export).*?(to|as).*?(pptx|powerpoint|presentation)",
                  "html.*?to.*?(pptx|powerpoint|slides)"
              ]
          },
          "fileTriggers": {
              "pathPatterns": [
                  "**/*.pptx",
                  "**/presentations/**/*",
                  "**/slides/**/*"
              ]
          }
      },
      "skill-creator": {
          "type": "domain",
